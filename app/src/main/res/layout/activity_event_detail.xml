<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/card_comments"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true"
        tools:context="com.shindygo.shindy.EventDetailActivity">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_gray"
                android:fitsSystemWindows="true"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|snap"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:background="@color/colorPrimaryDark"
                            android:fitsSystemWindows="true"
                            android:scaleType="centerCrop"
                            android:transitionName="@string/transition_event_image"

                            app:layout_collapseMode="parallax">

                        </android.support.v4.view.ViewPager>

                        <com.rd.PageIndicatorView
                            android:id="@+id/pageIndicatorView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="200dp"
                            app:piv_animationType="scale"
                            app:piv_dynamicCount="true"
                            app:piv_interactiveAnimation="true"
                            app:piv_selectedColor="@android:color/white"
                            app:piv_viewPager="@id/pager" />

                        <LinearLayout
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"

                            android:layout_centerVertical="true"
                            android:layout_gravity="bottom|right"


                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:gravity="bottom|right|center_vertical|center_horizontal"
                            android:orientation="vertical"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                            app:layout_collapseMode="pin"
                            app:layout_scrollFlags="enterAlways">


                            <Button
                                android:layout_width="@dimen/tab_button_icon_size"
                                android:layout_height="@dimen/tab_button_icon_size"
                                android:layout_margin="10dp"
                                android:layout_weight="0"
                                android:background="@mipmap/twit_round" />

                            <Button
                                android:layout_width="@dimen/tab_button_icon_size"
                                android:layout_height="@dimen/tab_button_icon_size"
                                android:layout_margin="10dp"
                                android:layout_weight="0"
                                android:background="@mipmap/fb_round" />

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="@dimen/tab_button_icon_size"
                                android:layout_height="@dimen/tab_button_icon_size"
                                android:layout_margin="10dp"
                                android:layout_weight="0"
                                android:background="@drawable/ic_mail"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical|center_horizontal" />
                        </LinearLayout>

                    </RelativeLayout>

                    <com.rahimlis.badgedtablayout.BadgedTabLayout
                        android:id="@+id/taab"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:theme="@style/ThemeToolbarDarkOverflow"
                        app:badgeBackgroundColor="@color/navigation_notification_yellow"
                        app:badgeTextColor="@android:color/white"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:layout_collapseMode="pin"
                        app:layout_scrollFlags="enterAlways"
                        app:popupTheme="@style/AppTheme.PopupOverlay"

                        app:tabGravity="fill"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@android:color/black"
                        app:tabTextColor="@android:color/black"
                        app:tabTextSize="7sp" />


                </LinearLayout>


            </android.support.design.widget.CollapsingToolbarLayout>

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_margin="10dp"
                android:background="@drawable/drop_shadow"
                android:paddingBottom="9px"
                android:paddingLeft="6px"
                android:paddingRight="8px"
                android:paddingTop="4px"
                app:srcCompat="@drawable/ic_back" />

        </android.support.design.widget.AppBarLayout>

        <com.shindygo.shindy.widget.MyNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp5"
                        android:background="@android:color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_eventName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center_horizontal"
                                android:text="TED Conference"
                                android:textColor="#212121"
                                android:textSize="@dimen/event_title_text_size"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_hosted_by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:lineSpacingExtra="4sp"
                                android:text="Hosted by: TED"
                                android:textColor="#424242"
                                android:textSize="12sp"
                                android:textStyle="normal" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp5"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RatingBar
                                    android:id="@+id/rating_bar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="80dp"
                                    android:layout_height="@dimen/dp20"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:stepSize="0.1" />

                                <TextView
                                    android:id="@+id/tv_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:text="3.0"
                                    android:textColor="@android:color/black"
                                    android:textSize="12dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:text="@string/reviews"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="10sp"
                                    android:textStyle="italic" />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/vertical_line"
                            android:layout_width="1dp"
                            android:layout_height="73dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="5dp"
                            android:layout_marginEnd="73dp"
                            android:layout_marginRight="73dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:id="@+id/human"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center|clip_vertical"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tv_man"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginLeft="@dimen/dp10"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="17"
                                    android:textColor="@color/gray" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="right|center_vertical"
                                    android:foregroundGravity="center_vertical"
                                    android:src="@drawable/man"
                                    android:tint="@color/gray" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tv_woman"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:text="1"
                                    android:textColor="@color/gray" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="right|center_vertical"
                                    android:src="@drawable/lady"
                                    android:tint="@color/gray" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_spot"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_marginTop="@dimen/dp5"
                                android:gravity="center_horizontal"
                                android:text="@string/spots"
                                android:textColor="@color/gray"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grat_bg"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">

                    <LinearLayout
                        android:id="@+id/ll_like"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="9dp"
                            android:src="@drawable/heart_border"
                            android:tint="@color/gray_tint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="LIKE"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/whoInvited"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="9dp"
                            android:src="@drawable/persons_plus"
                            android:tint="@color/gray_tint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WHO's INVITED"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/send_invite"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="9dp"
                            android:src="@drawable/persons_plus"
                            android:tint="@color/gray_tint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_invite"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/iam_in"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iam_in_image"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="9dp"
                            android:src="@drawable/tick_round"
                            android:tint="@color/gray_tint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/i_m_in"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_block_event"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/stop"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="9dp"
                            android:src="@drawable/stop"
                            android:tint="@color/gray_tint" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/block_event"
                            android:textSize="9sp" />

                    </LinearLayout>
                </LinearLayout>

                <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/taab"

                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:showIn="@layout/app_bar_main">


                </android.support.v4.view.ViewPager>


            </LinearLayout>


        </com.shindygo.shindy.widget.MyNestedScrollView>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone" />

    </android.support.design.widget.CoordinatorLayout>

    <include
        layout="@layout/comment_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:visibility="gone" />

</RelativeLayout>
