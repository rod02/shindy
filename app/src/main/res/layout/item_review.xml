<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:translationZ="3dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">


            <RatingBar
                android:layout_marginEnd="10dp"
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/rating_bar"
                android:text="4.0"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:visibility="gone"
        android:gravity="center"
            android:id="@+id/ll_stars"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/star_gold"/>
            <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="2dp"
        android:src="@drawable/star_gold"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_margin="2dp"
                android:src="@drawable/star_gold"/>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="2dp"
            android:src="@drawable/star_gold"/>

            <ImageView
            android:layout_width="12dp"
            android:layout_margin="2dp"
            android:layout_height="12dp"
            android:tint="@color/dark_gray"

            android:src="@drawable/star_gold"/>


    </LinearLayout>


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="12dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:text="TED Conference"
                android:textAlignment="viewStart"
                android:layout_toEndOf="@+id/rating"
                android:layout_toStartOf="@+id/tv_date"
                android:textColor="#212121"
                android:textSize="15sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="8dp"
                android:textStyle="normal"
                android:layout_alignParentEnd="true"
                android:textColor="#424242"
                android:text="Feb 12"
                  />

        </RelativeLayout>
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#212121"
                android:text="Cant say how good it was. Amasing people,
stunning!"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>