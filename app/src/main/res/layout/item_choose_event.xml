<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cv_main"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="@dimen/dp10">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp10">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/no_image"
            app:riv_corner_radius="@dimen/dp10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exprires"
            android:textSize="7dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/robotoblack"
            android:text="Expires: Mon Oct 16, 2017"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/middle"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:layout_toRightOf="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10">
        <TextView
            android:id="@+id/tv_eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TED Conference"
            android:textSize="13dp"
            android:fontFamily="@font/robotoregular"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/tv_host"
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp10"
            android:visibility="gone"
            android:fontFamily="@font/robotoregular"
            android:text="Private host: Tony Cage"
            android:textColor="#f8d159"/>
        <TextView
            android:layout_marginTop="@dimen/dp5"
            android:textSize="@dimen/dp10"
            android:id="@+id/tv_invited"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="Invited by: Shindings" />
        <TextView
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="wrap_content"
            android:textSize="@dimen/dp10"
            android:id="@+id/tv_offer"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="Offer to pay if you accept"
            android:textColor="#fe6b63"/>
        <TextView
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="wrap_content"
            android:textSize="@dimen/dp10"
            android:id="@+id/tv_date"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="Wed Oct 11, 2017 | 6-8 PM " />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_open_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp10"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp10"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/greycircle"

     />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:visibility="gone"
                android:text="Unblock"/>
        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>