<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp5"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/dp10"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/item_list_avatar_size"
                android:layout_height="@dimen/item_list_avatar_size"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_test1" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_shape_green"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:gravity="center_vertical"
                android:text="Tony Cage, 23 "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_invited_anonymously"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/invited_anonymously"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_offered_to_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/offered_to_pay"
                android:textColor="@color/offere_to_pay"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_where"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp16"

            android:scaleType="centerInside"
            android:src="@drawable/uninvite"
            android:visibility="gone" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            >
        <ImageView
            android:id="@+id/iv_confirm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp16"
            android:scaleType="centerInside"
            android:src="@drawable/uninvite"
            />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_main">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bar"
            android:visibility="visible"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@drawable/rouded_corner_box"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:src="@drawable/warring" />

                    <TextView
                        android:id="@+id/list_item_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp5"
                        android:textAllCaps="true"
                        android:textSize="@dimen/sp12"
                        android:text="@string/profile" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/star_favorite"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/list_item_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textSize="@dimen/sp12"
                        android:text="@string/favorite" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:src="@drawable/add_person" />

                    <TextView
                        android:id="@+id/list_item_invite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textSize="@dimen/sp12"
                        android:text="@string/invite" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:src="@drawable/message" />

                    <TextView
                        android:id="@+id/list_item_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textSize="@dimen/sp12"
                        android:text="@string/message" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bar"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHOOSE EVENT"
                    android:layout_gravity="center"
                    android:fontFamily="@font/robotocondensed"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/doller"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp20"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/invisible"
                    android:layout_marginStart="@dimen/dp20"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bar">
            <android.support.v7.widget.RecyclerView

                android:id="@+id/rv_event_user"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_arrow"
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/dp10"
                android:layout_toRightOf="@+id/rv_event_user"
                android:layout_gravity="center_vertical"
                android:src="@drawable/righticon" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_Bam"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_online"
            android:text="Invite Sent...Bam"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_below="@+id/lll"/>
    </LinearLayout>
</RelativeLayout>
