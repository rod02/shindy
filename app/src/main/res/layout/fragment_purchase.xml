<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.shindygo.shindy.SearchFilterActivity">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/dp16"
            android:id="@+id/back"
            android:scaleType="centerInside"
            android:src="@drawable/navigation_lines" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/bebright"
            android:gravity="center"
            android:text="Purchase Event"
            android:textAppearance="?android:textAppearanceLarge" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:layout_below="@+id/top">

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginStart="@dimen/dp10"
            android:background="@android:color/darker_gray" />

        <include
            layout="@layout/item_invited_event" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_item_invited_event"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_marginStart="@dimen/dp10"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view5"
            android:layout_marginEnd="@dimen/dp20"
            android:layout_marginStart="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_weight="0"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_lbl_ticket_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:fontFamily="@font/robotoregular"
                        android:text="Ticket Price"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_lbl_local_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_lbl_ticket_price"
                        android:layout_below="@+id/tv_lbl_ticket_price"
                        android:layout_marginTop="@dimen/dp10"
                        android:fontFamily="@font/robotoregular"
                        android:text="Local Tax: "
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_ticket_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_lbl_local_tax"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp10"
                        android:fontFamily="@font/robotoregular"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_local_tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_lbl_ticket_price"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/robotoregular"
                        android:text="$ 10.00"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/vw_hor_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_lbl_local_tax"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tv_lbl_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vw_hor_2"
                        android:fontFamily="@font/robotoregular"
                        android:text="Total: "
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_lbl_total"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_below="@+id/vw_hor_2"
                        android:layout_marginLeft="53dp"
                        android:layout_marginStart="53dp"
                        android:fontFamily="@font/robotoregular"
                        android:text="$ 10.00"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/dp20"
                    android:layout_weight="0"
                    android:background="@drawable/bg_quick_review"
                    android:backgroundTint="#ffcc00"
                    android:text="CHECKOUT"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center|clip_vertical|clip_horizontal">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="0"
                        android:background="@drawable/rouded_corner_box"
                        android:gravity="center_vertical"
                        android:hint="@string/coupon_code"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="10dp" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dp20"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_blue"
                    android:text="@string/submit"
                    android:textColor="#007aff" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_weight="0"
                android:text="@string/purchase_notice_string"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>